@using CSHARPMVC.Models

@{
    ViewBag.Title = "Index";
}

@{
    var data = ViewBag.Employees;
}
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="container">
    <div class="col-md-6 col-md-offset-3">
        @Html.DropDownList("Last Ten Years", (IEnumerable<SelectListItem>)ViewBag.EmployeeNames, "Select A Year")
    </div>
</div>

<table class="table">

    @foreach (var item in @data)
    {
        <tr>
            <td>
                @item.employee_name
            </td>
            <td>
                @item.employee_age
            </td>
            <td>
                @item.id
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>


